{
  "name": "spotify-track-preview",
  "version": "1.0.0",
  "description": "Create Spotify track preview videos",
  "engines": {
    "node": "22.2.0"
  },
  "packageManager": "pnpm@9.5.0",
  "scripts": {
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/index.js",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src ./public --out-dir dist",
    "watch:dev": "nodemon -L",
    "clean": "rimraf dist",
    "test": "jest",
    "start": "npm-run-all server"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "@babel/cli": "7.24.7",
    "@babel/core": "7.24.7",
    "@babel/preset-env": "7.24.7",
    "jest": "29.7.0",
    "nodemon": "3.1.4",
    "npm-run-all": "4.1.5",
    "rimraf": "5.0.8"
  },
  "dependencies": {
    "axios": "1.7.2",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "fluent-ffmpeg": "2.1.3",
    "fs-extra": "11.2.0",
    "multer": "1.4.5-lts.1"
  }
}
